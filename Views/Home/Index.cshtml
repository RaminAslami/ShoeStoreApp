@model HomeViewModel

<partial name="_Carousel"/>

<div class="text-center">
    <img src="Images/bethanys-pie-shop-logomark.png" class="logo-mark mx-auto" />
    <h1>Shoes of the week</h1>
    <h5>Enjoy the weekly selection of our favorite shoes</h5>

    <div class="row pies-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var shoe in Model.ShoesOfTheWeek)
            {
               <partial name="_ShoeCard" model="shoe"/>
            }
        </div>

    </div>
</div>
